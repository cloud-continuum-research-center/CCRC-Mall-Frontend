{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { categories } from \"@/scripts/categories\";\nimport axios from \"axios\";\nimport { reactive } from \"vue\";\nimport Card from \"@/components/Card.vue\";\nimport router from \"@/scripts/router\";\nexport default {\n  name: \"Home\",\n  components: {\n    Card\n  },\n  setup() {\n    const state = reactive({\n      items: [],\n      searchTerm: \"\",\n      searchByName: false,\n      searchByCategory: false\n    });\n    axios.get(\"/api/items/\").then(({\n      data\n    }) => {\n      state.items = data;\n    });\n    const fetchItems = () => {\n      axios.get(\"/api/items/\").then(({\n        data\n      }) => {\n        state.items = data;\n        state.searchTerm = \"검색어를 입력하세요\";\n        state.searchByName = false;\n        state.searchByCategory = false;\n      });\n    };\n    const goToItemRegistration = () => {\n      router.push({\n        path: \"/new_item\"\n      });\n    };\n    const filterItems = () => {\n      let filteredItems = state.items;\n      if (state.searchTerm.trim() !== \"\") {\n        if (state.searchByName) {\n          filteredItems = filteredItems.filter(item => item.name.toLowerCase().includes(state.searchTerm.toLowerCase()));\n        } else if (state.searchByCategory) {\n          const selectedCategory = categories.find(category => category.name.toLowerCase().includes(state.searchTerm.toLowerCase()));\n          if (selectedCategory) {\n            filteredItems = filteredItems.filter(item => item.category_id === selectedCategory.id);\n          }\n        }\n      }\n      state.items = filteredItems;\n    };\n    return {\n      state,\n      fetchItems,\n      goToItemRegistration,\n      filterItems\n    };\n  }\n};","map":{"version":3,"names":["categories","axios","reactive","Card","router","name","components","setup","state","items","searchTerm","searchByName","searchByCategory","get","then","data","fetchItems","goToItemRegistration","push","path","filterItems","filteredItems","trim","filter","item","toLowerCase","includes","selectedCategory","find","category","category_id","id"],"sources":["C:\\Users\\boo\\icns\\shop\\front-end\\src\\pages\\Home.vue"],"sourcesContent":["<template>\r\n  <div class=\"home\">\r\n    <div class=\"container mt-5\">\r\n      <div class=\"row mb-4\">\r\n        <div class=\"col-md-6\">\r\n          <h1 class=\"display-4\">ICNS 쇼핑몰에 오신 것을 환영합니다!</h1>\r\n          <p class=\"lead\">최신 제품을 확인하고 쇼핑을 즐겨보세요.</p>\r\n        </div>\r\n        <div class=\"col-md-6 text-end\">\r\n          <button @click=\"goToItemRegistration\" class=\"btn btn-primary\">상품 등록</button>\r\n        </div>\r\n      </div>\r\n\r\n      <div class=\"row mb-4\">\r\n        <div class=\"col-md-8\">\r\n          <input type=\"text\" v-model=\"state.searchTerm\" class=\"form-control\" placeholder=\"검색어를 입력하세요\" />\r\n        </div>\r\n        <div class=\"col-md-4\">\r\n          <div class=\"btn-group\" role=\"group\">\r\n            <button @click=\"filterItems\" class=\"btn btn-primary\">검색</button>\r\n            <button @click=\"fetchItems\" class=\"btn btn-secondary\">초기화</button>\r\n          </div>\r\n          <div class=\"form-check form-switch\">\r\n            <input type=\"checkbox\" class=\"form-check-input\" id=\"searchByName\" v-model=\"state.searchByName\">\r\n            <label class=\"form-check-label\" for=\"searchByName\">상품명으로 검색</label>\r\n          </div>\r\n          <div class=\"form-check form-switch\">\r\n            <input type=\"checkbox\" class=\"form-check-input\" id=\"searchByCategory\" v-model=\"state.searchByCategory\">\r\n            <label class=\"form-check-label\" for=\"searchByCategory\">카테고리로 검색</label>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <div class=\"row row-cols-1 row-cols-md-3 g-4\">\r\n        <div class=\"col\" v-for=\"(item, idx) in state.items\" :key=\"idx\">\r\n          <Card :item=\"item\" />\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { categories } from \"@/scripts/categories\";\r\nimport axios from \"axios\";\r\nimport { reactive } from \"vue\";\r\nimport Card from \"@/components/Card.vue\";\r\nimport router from \"@/scripts/router\";\r\n\r\nexport default {\r\n  name: \"Home\",\r\n  components: { Card },\r\n\r\n  setup() {\r\n    const state = reactive({\r\n      items: [],\r\n      searchTerm: \"\",\r\n      searchByName: false,\r\n      searchByCategory: false\r\n    });\r\n\r\n    axios.get(\"/api/items/\").then(({ data }) => {\r\n      state.items = data;\r\n    });\r\n\r\n    const fetchItems = () => {\r\n      axios.get(\"/api/items/\").then(({ data }) => {\r\n        state.items = data;\r\n        state.searchTerm=\"검색어를 입력하세요\";\r\n        state.searchByName=false;\r\n        state.searchByCategory=false;\r\n      });\r\n    };\r\n\r\n    const goToItemRegistration = () => {\r\n      router.push({ path: \"/new_item\" });\r\n    };\r\n\r\n    const filterItems = () => {\r\n      let filteredItems = state.items;\r\n      if (state.searchTerm.trim() !== \"\") {\r\n        if (state.searchByName) {\r\n          filteredItems = filteredItems.filter(item => item.name.toLowerCase().includes(state.searchTerm.toLowerCase()));\r\n        } else if (state.searchByCategory) {\r\n          const selectedCategory = categories.find(category => category.name.toLowerCase().includes(state.searchTerm.toLowerCase()));\r\n          if (selectedCategory) {\r\n            filteredItems = filteredItems.filter(item => item.category_id === selectedCategory.id);\r\n          }\r\n        }\r\n      }\r\n      state.items = filteredItems;\r\n    };\r\n\r\n    return { state, fetchItems, goToItemRegistration, filterItems };\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.home h1 {\r\n  color: #333;\r\n}\r\n\r\n.home p {\r\n  color: #666;\r\n}\r\n\r\n.home .form-control {\r\n  border-radius: 0;\r\n}\r\n\r\n.home .btn-primary {\r\n  background-color: #007bff;\r\n  border-color: #007bff;\r\n}\r\n\r\n.home .btn-secondary {\r\n  background-color: #6c757d;\r\n  border-color: #6c757d;\r\n}\r\n\r\n.home .form-check-label {\r\n  color: #666;\r\n}\r\n\r\n.home .form-check-input:checked {\r\n  background-color: #007bff;\r\n}\r\n\r\n.home .row-cols-1 > .col {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n@media (min-width: 768px) {\r\n  .home h1.display-4 {\r\n    font-size: 2.5rem;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";AA2CA,SAASA,UAAS,QAAS,sBAAsB;AACjD,OAAOC,KAAI,MAAO,OAAO;AACzB,SAASC,QAAO,QAAS,KAAK;AAC9B,OAAOC,IAAG,MAAO,uBAAuB;AACxC,OAAOC,MAAK,MAAO,kBAAkB;AAErC,eAAe;EACbC,IAAI,EAAE,MAAM;EACZC,UAAU,EAAE;IAAEH;EAAK,CAAC;EAEpBI,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIN,QAAQ,CAAC;MACrBO,KAAK,EAAE,EAAE;MACTC,UAAU,EAAE,EAAE;MACdC,YAAY,EAAE,KAAK;MACnBC,gBAAgB,EAAE;IACpB,CAAC,CAAC;IAEFX,KAAK,CAACY,GAAG,CAAC,aAAa,CAAC,CAACC,IAAI,CAAC,CAAC;MAAEC;IAAK,CAAC,KAAK;MAC1CP,KAAK,CAACC,KAAI,GAAIM,IAAI;IACpB,CAAC,CAAC;IAEF,MAAMC,UAAS,GAAIA,CAAA,KAAM;MACvBf,KAAK,CAACY,GAAG,CAAC,aAAa,CAAC,CAACC,IAAI,CAAC,CAAC;QAAEC;MAAK,CAAC,KAAK;QAC1CP,KAAK,CAACC,KAAI,GAAIM,IAAI;QAClBP,KAAK,CAACE,UAAU,GAAC,YAAY;QAC7BF,KAAK,CAACG,YAAY,GAAC,KAAK;QACxBH,KAAK,CAACI,gBAAgB,GAAC,KAAK;MAC9B,CAAC,CAAC;IACJ,CAAC;IAED,MAAMK,oBAAmB,GAAIA,CAAA,KAAM;MACjCb,MAAM,CAACc,IAAI,CAAC;QAAEC,IAAI,EAAE;MAAY,CAAC,CAAC;IACpC,CAAC;IAED,MAAMC,WAAU,GAAIA,CAAA,KAAM;MACxB,IAAIC,aAAY,GAAIb,KAAK,CAACC,KAAK;MAC/B,IAAID,KAAK,CAACE,UAAU,CAACY,IAAI,CAAC,MAAM,EAAE,EAAE;QAClC,IAAId,KAAK,CAACG,YAAY,EAAE;UACtBU,aAAY,GAAIA,aAAa,CAACE,MAAM,CAACC,IAAG,IAAKA,IAAI,CAACnB,IAAI,CAACoB,WAAW,CAAC,CAAC,CAACC,QAAQ,CAAClB,KAAK,CAACE,UAAU,CAACe,WAAW,CAAC,CAAC,CAAC,CAAC;QAChH,OAAO,IAAIjB,KAAK,CAACI,gBAAgB,EAAE;UACjC,MAAMe,gBAAe,GAAI3B,UAAU,CAAC4B,IAAI,CAACC,QAAO,IAAKA,QAAQ,CAACxB,IAAI,CAACoB,WAAW,CAAC,CAAC,CAACC,QAAQ,CAAClB,KAAK,CAACE,UAAU,CAACe,WAAW,CAAC,CAAC,CAAC,CAAC;UAC1H,IAAIE,gBAAgB,EAAE;YACpBN,aAAY,GAAIA,aAAa,CAACE,MAAM,CAACC,IAAG,IAAKA,IAAI,CAACM,WAAU,KAAMH,gBAAgB,CAACI,EAAE,CAAC;UACxF;QACF;MACF;MACAvB,KAAK,